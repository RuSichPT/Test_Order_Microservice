<!--        VALUES (NEXTVAL('session_seq'),#{sessionId}, #{startTime}, #{timeoutMinutes});-->
<!--    </insert>-->

    <select id="selectSession" resultMap="SessionMap">
        SELECT * FROM "session" WHERE SESSION_ID = #{sessionId};
    </select>

</mapper>